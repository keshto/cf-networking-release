#!/bin/bash

set -e
set -u

mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp -a . ${BOSH_INSTALL_TARGET}/src

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export GOPATH=$BOSH_INSTALL_TARGET
export PATH=$GOROOT/bin:$GOPATH/bin:$PATH

go install github.com/containernetworking/plugins/plugins/ipam/host-local

tar xzf calico-cni/calico-cni-1.9.tar.gz
mkdir ${BOSH_INSTALL_TARGET}/bin
chmod +x calico calico-ipam portmap
cp calico calico-ipam portmap ${BOSH_INSTALL_TARGET}/bin

go install cni-wrapper-plugin
