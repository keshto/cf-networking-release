chmod +x bird bird6 birdcl felix confd
cp bird bird6 birdcl ${BOSH_INSTALL_TARGET}/bin
cp felix ${BOSH_INSTALL_TARGET}/bin
cp confd ${BOSH_INSTALL_TARGET}/bin
