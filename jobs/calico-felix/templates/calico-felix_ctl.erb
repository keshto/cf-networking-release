#!/bin/bash -eu

<% unless p("cf_networking.disable") %>
source /var/vcap/packages/ctl-utils/ctl_util.sh

RUN_DIR=/var/vcap/sys/run/calico-felix
LOG_DIR=/var/vcap/sys/log/calico-felix

export PIDFILE="${RUN_DIR}"/calico-felix.pid

mkdir -p "${RUN_DIR}"
mkdir -p "${LOG_DIR}"

export PATH="${PATH}:/var/vcap/packages/calico-daemons/bin"
export FELIX_IPV6SUPPORT=false #make this a parameter

exec 1>> "${LOG_DIR}"/calico-felix_ctl.out.log
exec 2>> "${LOG_DIR}"/calico-felix_ctl.err.log

case $1 in

  start)
    trap 'handle_orphaned_server calico-felix ${pid}' TERM

    killall felix | true

    felix \
         -c /var/vcap/jobs/calico-felix/conf/calico-felix.cfg \
         2> >(tee -a "${LOG_DIR}"/calico-felix.stderr.log | logger -p user.error -t calico-felix) \
         1> >(tee -a "${LOG_DIR}"/calico-felix.stdout.log | logger -t calico-felix) &

    pid=`ps aux| grep calico-felix.cfg | grep -v grep | awk '{print $2}'`

    echo "${pid}" > "${PIDFILE}"

    ;;

  stop)

    stop_process

    ;;

  *)
    echo "Usage: $0 {start|stop}"

    ;;

esac
<% end %>
